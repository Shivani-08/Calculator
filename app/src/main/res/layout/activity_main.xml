<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivani.calculator.MainActivity">

    <TextView
        android:id="@+id/num_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:textSize="35dp" />
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:textSize="35dp"/>
    <GridLayout
        android:columnCount="4"
        android:rowCount="4"
        android:background="#111"
        android:useDefaultMargins="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <Button
            android:onClick="on7Click"
            android:id="@+id/button_7"
            android:layout_row="0"
            android:layout_column="0"
            android:text="7"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on8Click"
            android:id="@+id/button_8"
            android:layout_row="0"
            android:layout_column="1"
            android:text="8"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on9Click"
            android:id="@+id/button_9"
            android:layout_row="0"
            android:layout_column="2"
            android:text="9"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="ondivClick"
            android:id="@+id/button_div"
            android:layout_row="0"
            android:layout_column="3"
            android:text="/"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on4Click"
            android:id="@+id/button_4"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on5Click"
            android:id="@+id/button_5"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on6Click"
            android:id="@+id/button_6"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="onmulClick"
            android:id="@+id/button_mul"
            android:layout_row="1"
            android:layout_column="3"
            android:text="x"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on1Click"
            android:id="@+id/button_1"
            android:layout_row="2"
            android:layout_column="0"
            android:text="1"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on2Click"
            android:id="@+id/button_2"
            android:layout_row="2"
            android:layout_column="1"
            android:text="2"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on3Click"
            android:id="@+id/button_3"
            android:layout_row="2"
            android:layout_column="2"
            android:text="3"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="onsubClick"
            android:id="@+id/button_sub"
            android:layout_row="2"
            android:layout_column="3"
            android:text="-"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="onclearClick"
            android:id="@+id/button_clear"
            android:layout_row="3"
            android:layout_column="0"
            android:text="C"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="on0Click"
            android:id="@+id/button_0"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="ondecimalClick"
            android:id="@+id/button_decimal"
            android:layout_row="3"
            android:layout_column="2"
            android:text="."
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
        <Button
            android:onClick="onaddClick"
            android:id="@+id/button_add"
            android:layout_row="3"
            android:layout_column="3"
            android:text="+"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@null">
        </Button>
    </GridLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="onequalsClick"
        android:id="@+id/button_equals"
        android:text="="
        android:textSize="40dp"
        android:textColor="#fff"
        android:background="#111"
        />
</LinearLayout>
